makedepends=(xfce4-libui libnotify xfce4-panel)

description="Notification daemon for the Xfce desktop"
url="http://git.xfce.org/kelnos/xfce4-notifyd/"

packager="Yaolinux Team"
maintainer="rems"

name=xfce4-notifyd
version=0.4.4

source=(http://archive.xfce.org/src/apps/$name/0.4/$name-$version.tar.bz2)

build() {

cd $name-$version

 ./configure --prefix=/usr \
             --sysconfdir=/etc \
             --libexecdir=/usr/lib \
             --localstatedir=/var \
             --disable-static \
             --disable-debug

make
make DESTDIR=$PKG install
}
