# Depends on: xfce4-panel intltool xfce4-dev-tools

description="monitor DD for the panel"
url="http://goodies.xfce.org/"
packager="greg <greg@nutyx.org>"
contributors="tyrry"

name=xfce4-diskperf-plugin
version=2.6.1
release=3

source=(http://archive.xfce.org/src/panel-plugins/$name/2.6/$name-$version.tar.bz2
        glibc-2.25.patch)

build() {

cd $name-$version

patch -Np1 -i ../glibc-2.25.patch

NOCONFIGURE=1 xdt-autogen

./configure --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-static \
    --disable-debug
    
	make
	make DESTDIR=$PKG install
# Obsolet libs

rm $PKG/usr/lib/xfce4/panel/plugins/libdiskperf.la	
}
