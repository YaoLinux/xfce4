makedepends=(libnotify libexif exo xfce4-libui xfce4-panel desktop-file-utils gvfs gtk2 libpng libgudev xfce4-libutil)

description="Modern file manager for Xfce"
url="http://thunar.xfce.org"

packager="Yaolinux Team"
maintainer="rems"

run=(desktop-file-utils gtk-update-icon-cache)

name=thunar
version=1.8.16
release=2

source=(https://archive.xfce.org/src/xfce/$name/${version%.*}/$name-$version.tar.bz2)

build() {


cd $name-$version

./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-static \
    --enable-gio-unix \
    --enable-dbus \
    --enable-startup-notification \
    --enable-gudev \
    --enable-notifications \
    --enable-exif \
    --enable-pcre \
    --enable-gtk-doc \
    --disable-debug
    
make
make DESTDIR=$PKG install
}
